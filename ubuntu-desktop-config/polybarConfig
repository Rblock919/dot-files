;date = "%Y-%m-%d"
date = "%d %b %y"
date-alt = "%d %B %Y"

;time = %H:%M:%S
;time-alt = %H:%M:%S

time = %I:%M%p
time-alt = %I:%M%p

label =  %date%  %time%
label-foreground = ${colors.yellow}
label-background = ${colors.background}

